        },
        {
            "text": "-10 -5 0 \u00a2\u00b8' \u00b8' Fig. 3. ",
            "paragraph_rank": 15,
            "section_rank": 2,
            "ref_spans": [
                {
                    "start": 16,
                    "end": 22,
                    "type": "figure",
                    "text": "Fig. 3"
                }
